<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planRouteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/nextPointsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp">

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonAddNext"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="100"
            android:src="@android:drawable/ic_input_add"
            android:visibility="visible" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/buttonClear"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_notification_clear_all" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/buttonSave"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="100"
            android:src="@android:drawable/ic_menu_save"
            android:visibility="visible" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonFavourites"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="100"
            android:background="@android:drawable/btn_star_big_on" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/buttonNavigate"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="100"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_directions" />
    </LinearLayout>

</RelativeLayout>